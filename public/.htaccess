# Cache Control Headers for Static Assets
# Optimize site performance with proper caching

<IfModule mod_headers.c>
    # CSS ve JS dosyaları için uzun süreli cache (1 yıl)
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set ETag ""
        Header unset Last-Modified
    </FilesMatch>
    
    # Font dosyaları için uzun süreli cache (1 yıl)
    <FilesMatch "\.(woff|woff2|ttf|eot|otf)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
    
    # Görsel dosyalar için orta süreli cache (6 ay)
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=15552000"
    </FilesMatch>
    
    # Video dosyaları için orta süreli cache (1 ay)
    <FilesMatch "\.(mp4|webm|ogg)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # Diğer statik dosyalar için kısa cache (1 saat)
    <FilesMatch "\.(json|xml|txt)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # CSS ve JS - 1 yıl
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Fonts - 1 yıl
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Images - 6 ay
    ExpiresByType image/jpeg "access plus 6 months"
    ExpiresByType image/png "access plus 6 months"
    ExpiresByType image/gif "access plus 6 months"
    ExpiresByType image/webp "access plus 6 months"
    ExpiresByType image/svg+xml "access plus 6 months"
    ExpiresByType image/x-icon "access plus 6 months"
    
    # Videos - 1 ay
    ExpiresByType video/mp4 "access plus 1 month"
    ExpiresByType video/webm "access plus 1 month"
</IfModule>

